{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["DOM", "ES2020", "ES2023"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"declaration": false,
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"*": ["./@mf-types/*"],
			"@/*": ["./*"]
		}
	},
	"include": ["src", ".graphclient"]
}
